<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/q7title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qusetion 7"
        android:textSize="24sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/q7content"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="In which condition will you buy a new phone?"
        android:textSize="20sp"
        android:layout_below="@id/q7title"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="60dp"
        />

    <RadioGroup
        android:id="@+id/r7"
        android:layout_below="@id/q7content"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="40dp"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When the old phone has been used for a year or two.(but it still works)"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When the old phone has been used for more than three years.(but it still works)"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When the old phone breaks down."
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When a new phone is released"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            />
    </RadioGroup>

    <Button
        android:id="@+id/btn_q7"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:onClick="to_q_eight"
        />

    <!-- END    : Your code should be within this block -->

</RelativeLayout>

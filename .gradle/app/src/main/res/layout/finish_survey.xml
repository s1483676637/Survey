<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/fintit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THANK YOU"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"

        />

    <TextView
        android:id="@+id/fintit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOR YOUR ANSWERS!"
        android:textSize="24sp"
        android:layout_below="@id/fintit"
        android:layout_marginLeft="30dp"
        android:textColor="@android:color/black"
        />

<ImageView
    android:id="@+id/imgthks"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/imageone"
    android:layout_below="@id/fintit2"
    />

    <Button
        android:id="@+id/btn_welcome"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:onClick="endsur"
        />


    <!-- END    : Your code should be within this block -->

</RelativeLayout>
